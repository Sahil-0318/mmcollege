<%- include('partials/header') %>

  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">

    <!-- Sidebar Start -->
    <%- include('partials/sidebar') %>
    <!--  Sidebar End -->
    
    <!--  Main wrapper -->
    <div class="body-wrapper">

      <!--  Header Start -->
      <%- include('partials/appHeader') %>
      <!--  Header End -->
      
      <div class="container-fluid">
        <% if(locals.submitted){ %>
          <div id="submitPopUp">
            <div class="alert alert-success" role="alert">
              <%= locals.submitted %>
            </div>
          </div>
          <% }%>


            <% if(locals.alreadysubmitted){ %>
              <div id="submitPopUp">
                <div class="alert alert-danger" role="alert">
                  <%= locals.alreadysubmitted %>
                </div>
              </div>
              <% }%>

          <div class="card px-3 py-3">
  
              <h5 class="card-title fw-semibold mb-4">BCA Admission Forms</h5>

                  <form action="/bcaAdmForm" method="post" class="row g-3 needs-validation">
                    <div class="col-md-12 mb-3">
                      <label for="fullName" class="form-label">1. Full Name</label>
                      <input type="text" class="form-control" id="fullName" name="fullName" required>
                    </div>
                    <div class="col-md-4 mb-3">
                      <label for="registrationNumber" class="form-label">2. Registration Number</label>
                      <input type="number" class="form-control" id="registrationNumber" name="registrationNumber" required>
                    </div>
                    <div class="col-md-4 mb-3">
                      <label for="currentYear" class="form-label">3. Current Year</label>
                      <input type="number" class="form-control" id="currentYear" name="currentYear" required>
                    </div>
                    <div class="col-md-4 mb-3">
                      <label for="aadharNumber" class="form-label">4. Aadhar Number</label>
                      <input type="number" class="form-control" id="aadharNumber" name="aadharNumber" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="dOB" class="form-label">5. Date Of Birth</label>
                        <input type="date" class="form-control" id="dOB" name="dOB" required>
                    </div>
                    <div class="col-md-4 mb-3">
                      <label for="gender" class="form-label">6. Gender</label>
                      <select id="gender" class="form-select" name="gender" required>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                      </select>
                    </div>
                    <div class="col-md-4 mb-3">
                      <label for="nationality" class="form-label">7. Nationality</label>
                      <select id="nationality" class="form-select" name="nationality" required>
                        <option value="Indian">Indian</option>
                        <option value="Other">Other</option>
                      </select>
                    </div>
    
                    <div class="col-md-4 mb-3">
                      <label for="religion" class="form-label">8. Religion</label>
                      <select id="religion" class="form-select" name="religion" required>
                        <option value="Hindu">Hindu</option>
                        <option value="Muslim">Muslim</option>
                        <option value="Sikh">Sikh</option>
                        <option value="Christian">Christian</option>
                        <option value="Other">Other</option>
                      </select>
                    </div>
    
                    <div class="col-md-4 mb-3">
                      <label for="caste" class="form-label">9. Caste</label>
                      <select id="caste" class="form-select" name="caste" required>
                        <option value="General">General</option>
                        <option value="SC">SC</option>
                        <option value="ST">ST</option>
                        <option value="BC-1">BC-1</option>
                        <option value="BC-2">BC-2</option>
                        <option value="Other">Other</option>
                      </select>
                    </div>
    
                    <div class="col-md-12 mb-3">
                      <label for="fatherName" class="form-label">10. Father's Name / Guardian's Name</label>
                      <input type="text" class="form-control" id="fatherName" name="fatherName" required>
                    </div>
                    <div class="col-md-12 mb-3">
                      <label for="motherName" class="form-label">11. Mother's Name</label>
                      <input type="text" class="form-control" id="motherName" name="motherName" required>
                    </div>
                    <div class="col-md-9 mb-3">
                      <label for="parmanentAddress" class="form-label">12. Parmanent Address</label>
                      <input type="text" class="form-control" id="parmanentAddress" name="parmanentAddress" required>
                    </div>
                    <div class="col-md-3 mb-3">
                      <label for="parmanentAddressPin" class="form-label">Parmanent Add. Pin</label>
                      <input type="number" class="form-control" id="parmanentAddressPin" name="parmanentAddressPin" required>
                    </div>
                    <div class="col-md-9 mb-3">
                      <label for="presentAddress" class="form-label">13. Present Address</label>
                      <input type="text" class="form-control" id="presentAddress" name="presentAddress" required>
                    </div>
                    <div class="col-md-3 mb-3">
                      <label for="presentAddressPin" class="form-label">Present Add. Pin</label>
                      <input type="number" class="form-control" id="presentAddressPin" name="presentAddressPin" required>
                    </div>
                    <div class="col-md-4 mb-3">
                      <label for="mobileNumber" class="form-label">14. Mobile Number</label>
                      <input type="number" class="form-control" id="mobileNumber" name="mobileNumber" required>
                    </div>
                    <div class="col-md-8 mb-3">
                      <label for="email" class="form-label">15. Email</label>
                      <input type="email" class="form-control" id="email" name="email" required>
                    </div>
    
    
                    <div class="text-left d-flex gap-3">
                      <button type="submit" class="btn btn-primary">Submit</button>
                      <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                  </form>

          </div>

      </div>
    </div>
  </div>
  <script src="src/assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="src/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="src/assets/js/sidebarmenu.js"></script>
  <script src="src/assets/js/app.min.js"></script>
  <script src="src/assets/libs/simplebar/dist/simplebar.js"></script>
  <script>
    const submitPopUp = document.querySelector('#submitPopUp')
    setInterval(() => {
      submitPopUp.innerHTML = ''
    }, 3000);
  </script>
</body>

</html>